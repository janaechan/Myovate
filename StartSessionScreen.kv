            CustomizedButton:
#                pos: (self.parent.pos[0] + self.parent.width/2, self.parent.pos[1])
                size: self.parent.width/2, self.parent.height
                text: 'Submit'
                #size_hint: 1, 0.1
                on_press:
                    root.update_arduino()

