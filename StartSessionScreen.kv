<AddArduinoPopup>:
    id: add_arduino_popup
    size_hint: 0.5, 0.5
    auto_dismiss: False
    title: 'Connect Your Arduino'
    separator_color: [0 / 255., 0 / 255., 0 / 255., 1.]
    FloatLayout:
        CustomizedLabel:
            text: 'Find your Arduino to connect to.'
            halign: "center"
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        CustomizedButton:
            pos: (self.parent.pos[0] + self.parent.width/2, self.parent.pos[1])
            size: self.parent.width/2, self.parent.height/5
            text: 'Find Arduino'
            on_press:
                root.find_arduino_result()
                add_arduino_popup.dismiss()
        CustomizedButton:
            pos: self.parent.pos
            size: self.parent.width/2, self.parent.height/5
            text: 'CANCEL'
            on_press:
                add_arduino_popup.dismiss()
                app.root.current='main'


